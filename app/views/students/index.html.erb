<p id="notice"><%= notice %></p>

<div class="table-header">
  <h5>Students</h5>
</div>

<div class="card material-table" >
  <table class="responsive nowrap table table-hover dataTable no-footer dtr-inline">
    <thead>
      <tr>
        <th>Name</th>
        <th>Age</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @students.each do |student| %>
        <tr>
          <td><%= student.name %></td>
          <td><%= student.age %></td>
          <td>
            <%= link_to student do %>
              <i class="small material-icons">visibility</i>
            <% end %>
          </td>
          <td>
            <%= link_to edit_student_path(student) do %>
              <i class="small material-icons">edit</i>
            <% end %>
          </td>
          <td>
            <%= link_to student, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <i class="small material-icons">delete</i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<div class="fixed-action-btn direction-top active">
  <%= link_to new_student_path, class: "waves-effect waves-light btn btn-floating btn-large cyan" do %>
    <i class="large material-icons">add</i>
  <% end %>
</div>